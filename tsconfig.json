{
  "compilerOptions": {
    "target": "es5",                                  
    "lib": ["es2017", "es7", "es6", "dom"],
    "module": "commonjs",                                
    "rootDir": "./src",                                  
    "declaration": true,                              
    "outDir": "./dist",                                   
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true,
                                     
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": ["./src/**/*.ts"]
}
